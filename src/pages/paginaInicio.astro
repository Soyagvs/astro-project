---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Sections from "@/components/Sections.astro";
import Footer from "@/components/Footer.astro";
---

<Layout
    title="Sitio no oficial"
    description="Este sitio es una copia de la pagina de Netflix"
/>
<Header />
<div class="absolute top-0">
    <div class="absolute inset-0 overlay overlayy"></div>
    <img
        src="/img/bg.jpg"
        alt="Image background the main"
        class="w-screen top-0 object-cover h-[470px] lg:h-[560px] z-20"
    />
</div>
<main class="relative z-10 flex flex-col">
    <Sections />
</main>
<Footer />

<style>
    .inner-shadow {
        box-shadow:
            inset 0 4px 6px rgba(0, 0, 0, 1),
            inset 0 -4px 6px rgba(0, 0, 0, 1);
    }
    .overlay {
        background: rgba(0, 0, 0, 0.5);
    }
    .overlayy {
        background: linear-gradient(
            to bottom,
            rgba(0, 0, 0, 0.7) 85%,
            rgba(0, 0, 0, 0) 10%,
            rgba(0, 0, 0, 0.7) 85%
        );
    }
</style>
