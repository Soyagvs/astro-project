---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Sections from "@/components/Sections.astro";
import Footer from "@/components/Footer.astro";
---

<Layout
	title="Netflix Argentina - Watch TV Shows Online, Watch Movies Online"
	description="watch movies,movies online,watch TV,TV online,TV shows online,watch TV shows,stream movies,stream tv,instant streaming,watch online,movies,watch movies Argentina,watch TV online,no download,full length movies"
>
	<Header />
	<div class="absolute top-0">
		<div class="absolute inset-0 overlay overlayy"></div>
		<img
			src="/img/bg.jpg"
			alt="Image background the main"
			class="w-full top-0 object-cover h-[470px]"
		/>
	</div>
	<main class="relative z-10 flex flex-col">
		<Sections />
	</main>
	<Footer />
</Layout>
<style>
	.inner-shadow {
		box-shadow:
			inset 0 4px 6px rgba(0, 0, 0, 1),
			inset 0 -4px 6px rgba(0, 0, 0, 1);
	}
	.overlay {
		background: rgba(0, 0, 0, 0.5);
	}
	.overlayy{
		background: linear-gradient(
				to bottom,
				rgba(0, 0, 0, 0.7) 85%,
				rgba(0, 0, 0, 0) 10%,
				rgba(0, 0, 0, 0.7) 85%)
	
	}
</style>
