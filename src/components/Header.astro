---
import Logo from "@/netflix/Logo.astro";
---

<header
    class="bg-transparent z-20 relative p-6 flex justify-around md:flex-col sm:flex-col lg:flex-col xl:flex-col"
>
    <nav class="flex items-center">
        <Logo />
        <button
            class="text-white rounded w-40 sm:w-40 h-8 text-lg border border-gray-600 ml-96 sm:ml-28 lg:ml-96 xl:ml-[470px]"
        >
            English
        </button>
        <button
            class="bg-red-600 text-white rounded w-24 h-8 text-sm font-bold ml-2 sm:w-[150px]"
        >
            Sign in
        </button>
    </nav>
</header>
